                    </tr>
                </thead>
                <tbody>

                    <% for(var i=0; i<convocatoria.length; i++) { %>
                        <tr>
                            <% if(convocatoria.length > 0) { %>
                                <td>
                                    <%=convocatoria[i].Comunicado.data_convocatoria%>
                                </td>
                                <td>
                                    <%=convocatoria[i].usuarioLogin %>
                                </td>
                                <td>
                                    <%=convocatoria[i].Comunicado.Assunto_convocatoria %>
                                </td>

                                <td>
                                    <%=convocatoria[i].Comunicado.subtitulo_convocatoria %>
                                </td>

                                <td>
                                    <%=convocatoria[i].Comunicado.mesagem_convocatoria %>
                                </td>

                                <td>
                                    <%=convocatoria[i].Colegio %>
                                </td>
                                <td>
                                    <a href="/colegios/verconvocatoria/edit/<%=convocatoria[i]._id%>"><img id="edite-bot" src="/img/icon/Edit Message.png"></td>

                        </tr>
