                                <option value="2ª">2ª</option>
                                <option value="1ª">1ª</option>
                             </select>
                        <div class="btn-pesquisar">
                            <a href="javascript://"><button class="btn btn-info" id="btn_buscar" type="submit">Buscar</button></a>
                        </div>
                    </div>
                </form>
                <hr>
                <div class="cap_tabela">
                    <h3>Todas as Transferências</h3>
                </div>

                <table class="table table-striped table-bordered  table-sm" width="100%">
                    <thead class="topo_tab">
                        <tr class="top-tabela">
                            <th scope="col">Data/hora</th>
                            <th scope="col">Foto</th>
                            <th scope="col">Encarregado</th>
                            <th scope="col">Estudante</th>
                            <th scope="col">Classe</th>
                            <th scope="col">nº</th>
                            <th scope="col">Colégio</th>
                            <th scope="col">Valor pago</th>
                            <th scope="col">Qtd de meses</th>
                            <th>Meses pago</th>
                            <th scope="col">Acção</th>



                        </tr>
                    </thead>
                    <tbody>

                        <% for(var i=0; i<pagamento.length; i++) { %>
                            <tr class="body-tabela">
                                <% if(pagamento.length != []) { %>
                                    <td>
                                        <%=pagamento[i].data %>
                                            <%=pagamento[i].Anoletivo.hora %>
                                    </td>

                                    <td><img src="/uploads/alunos/<%=pagamento[i].foto%>" width="50" height="40"></td>
                                    <th>
                                        <%=pagamento[i].nomeEncarregado %>
                                    </th>
                                    <td>
                                        <%=pagamento[i].estudante %>
                                    </td>
                                    <td>
                                        <%=pagamento[i].classe%>
                                    </td>
                                    <td>
                                        <%=pagamento[i].numerode_estudante%>
                                    </td>
                                    <td>
                                        <%=pagamento[i].colegio%>
                                    </td>
                                    <td>
                                        <%=pagamento[i].valortransferido%> Kz</td>
                                    <td>
                                        <%=pagamento[i].numerodemeses%>
                                    </td>

                                    <td>
                                        <%=pagamento[i].mese %>
                                    </td>
                                    <td><button type="button" class="btn btn-danger"><a href="#">Eliminar</a></td>
                                        </tr>
                                        <% }  else { %>
                                            <h2>Nenhum pagamento Feito</h2>
                                        <% } %>
                                    <% } %>
                            </tbody>
                               </table>
                        </section>
                       </div>
