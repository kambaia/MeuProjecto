<% include ../partials/head %>

    <div class="paineis-geral">
        <div id="titulo-dd-alunos">
            <h2 class="card-title" id="add-aluno">Cadastrar Alunos</h2>
            <hr>
        </div>
        <div id="alunos">


            <% if(erro){ %>
                <h4 class="alert alert-danger">
                    <%=JSON.stringify(erro)%>
                </h4>

                <% } %>


                    <form action="/colegios/addalunos" method="POST" enctype="multipart/form-data">


                        <div class="form-row">

                            <div class="form-group col-sm-6">
                                <label for="inputState">Seciona o Nivel Escolar</label>
                                <select id="inputState" class="form-control" name="ciclo">
                                                        <option selected>Escolha...</option>
                                                        <option>Primaria</option>
                                                        <option>1ª Ciclo</option>
                                                        <option>2ª Ciclo</option>  
                                                    </select>
                            </div>

                            <div class="form-group col-sm-6">
                                <label for="inputState">Seleciona o sexo</label>
                                <select id="sexo" name="genero" class="form-control">
                                                                <option selected>Escolha...</option>
                                                                <option value="Masculino">Masculino</option>
                                                                <option value="Femenino">Femenino</option>  
                                                            </select>
                            </div>
                        </div>
                        <div class="grupo-form">
                            <div class="form-row">
                                <div class="fotoperfil">
                                    <img src="/img/aluno.png" id="masculino" width="150" class="img-thumbnail">
                                    <img src="/img/aluna.png" id="femenino" width="150" class="img-thumbnail">
                                </div>
                                <br>
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text" id="inputGroupFileAddon01">Adicionar</span>
                                    </div>
                                    <div class="custom-file">
                                        <input type="file" class="custom-file-input" id="upload" name="foto_perfil" aria-describedby="inputGroupFileAddon01">
                                        <label class="custom-file-label" for="inputGroupFile01">Escolha a foto</label>
                                    </div>
                                </div>


                                <div class="form-group col-md-6">
                                    <label for="inputEmail4">Nome Completo do Estudante</label>
                                    <input type="text" name="nome_Estudante" placeholder="Nome do Estudante:" class="form-control" required>
                                </div>


                                <div class="form-group col-md-6">
                                    <label for="inputPassword4">Data de nascimento</label>
                                    <input type="date" name="data_nascimento" class="form-control" required>
                                </div>

                                <div class="form-group col-md-4">
                                    <label for="inputEmail4">Propina</label>
                                    <input type="number" name="propina" placeholder="Digite o valor que aluno paga: ex: 15.000 kz" class="form-control" required>
                                </div>

                                <div class="form-group col-md-2">
                                    <label for="inputAddress">Curso</label>
                                    <input type="text" name="curso" placeholder="Curso:/ Ainda não" class="form-control" required>
                                </div>

                                <div class="form-group col-md-2">
                                    <label for="inputAddress">Número de estudante:</label>
                                    <input type="text" name="numemeroEstudante" placeholder="Nº de Estudante:" class="form-control" required>
                                </div>

                                <div class="form-group  col-md-2">
                                    <label>Classe</label>
                                    <select name="classe" class="form-control">
                                <option selected>Classe....</option>
                                <option value="13ª">13ª</option>
                                <option value="12ª">12ª</option>
                                <option value="11ª">11ª</option>
                                <option value="10ª">10ª</option>
                                <option value="9ª">9ª</option>
                                <option value="8ª">8ª</option>
                                <option value="7ª">7ª</option>
                                <option value="6ª">6ª</option>
                                <option value="5ª">5ª</option>
                                <option value="4ª">4ª</option>
                                <option value="3ª">3ª</option>
                                <option value="2ª">2ª</option>
                                <option value="1ª">1ª</option>
                            </select>
                                </div>

                                <div class="form-group  col-md-2">
                                    <label for="inputAddress2">Turma:</label>
                                    <input type="text" name="turma" placeholder="Turma:" class="form-control" required>
                                </div>

                                <div class="form-group col-md-3">
                                    <label for="inputCity">Telefone do pai</label>
                                    <input type="tel" name="movicel" placeholder="Telefone de Pai" class="form-control" required>
                                </div>


                                <div class="form-group col-md-3">
                                    <label for="inputAddress2">Telefone da mãe:</label>
                                    <input type="tel" name="unitel" placeholder="Telefone de Mãe" class="form-control" required>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary">Salvar</button>
                            <button class="btn btn-primary"><a href="/colegios/alunos/listaralunos"> Cancelar</a></button>
                        </div>

                    </form>

        </div>

    </div>
    </div>

    <% include ../partials/footer %>