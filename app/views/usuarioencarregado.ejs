<% include partials/head %>
    <link rel="stylesheet" href="/css/main_paginas.css">
    <section class="banner_site">

        <header class="cabecalho">
            <div id="discri">
                <h2 id="titulo">Registro de Encarregados</h2>

            </div>
        </header>
    </section>
    <div class="caixa-op">




        <section class=cadastrar>
            <div class="container-fluid">
                <div class="container">
                    <div class="encarregado">
                        <% if(validacao.length >0){ %>
                            <div class="alert alert-danger">
                                <strong>Atensão!</strong>
                                <% for(var i=0; i<validacao.length; i++){ %>
                                    <ul>
                                        <li>
                                            <%=validacao[i].msg %>
                                        </li>
                                    </ul>
                                    <% } %>
                            </div>
                            <%  } %>
                                <div class="caixa-form">
                                    <div class="fotoperfil">
                                        <img src="/img/user1.png" id="imagem" width="" class="img-thumbnail">
                                    </div>
                                    <form action="/cadastrarencarregado" method="POST" enctype="multipart/form-data">
                                        <div class="row">


                                            <div class="input-group mb-3">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text" id="inputGroupFileAddon01">Adicionar</span>
                                                </div>
                                                <div class="custom-file">
                                                    <input type="file" class="custom-file-input" id="upload" name="foto_perfil" aria-describedby="inputGroupFileAddon01" required>
                                                    <label class="custom-file-label" for="inputGroupFile01">Escolha e adiciona uma foto de perfil</label>
                                                </div>
                                            </div>

                                            <div class="col-sm-6">
                                                <div class="caixa-inputs">
                                                    <div class="input_text focus"> </div>
                                                    <input type="text" class="form-control" id="nome" name="nome" autocomplete="off" placeholder="Seu Nome de Usúario:">
                                                </div>
                                            </div>

                                            <div class="col-sm-6">
                                                <div class="caixa-inputs">
                                                    <div class="input_text"> </div>
                                                    <input type="email" class="form-control" id="email" name="email" aria-describedby="emailHelp" autocomplete="off" placeholder="Email:">
                                                </div>
                                            </div>

                                            <div class="col-sm-3">
                                                <div class="caixa-inputs">
                                                    <div class="input_text"> </div>
                                                    <input class="form-control" type="password" id="senha" name="senha" autocomplete="off" placeholder="Senha:">
                                                </div>
                                            </div>

                                            <div class="col-sm-3">
                                                <div class="caixa-inputs">
                                                    <div class="input_text"></div>
                                                    <input class="form-control" type="password" id="confirmaSenha" autocomplete="off" name="confirmaSenha" placeholder="confirmar senha:">
                                                </div>
                                            </div>

                                            <div class="col-sm-6">
                                                <div class="caixa-inputs">
                                                    <div class="input_text"></div>
                                                    <input type="text" name="Nome_encarregado" placeholder="Insira aqui o seu nome completo:" class="form-control">
                                                </div>
                                            </div>

                                            <div class="col-sm-3">
                                                <div class="caixa-inputs">
                                                    <div class="input_text"></div>
                                                    <label>Data de nascimento</label><br>
                                                    <input type="date" name="data_nascimento" class="form-control" required>
                                                </div>
                                            </div>

                                            <div class="col-sm-3">
                                                <div class="caixa-inputs">
                                                    <div class="input_text"></div>
                                                    <label>Seleciona o sexo</label>
                                                    <select name="genero" class="form-control" required><br>
                                    <option value="Masculino">Masculino</option>
                                    <option value="Femenino">Femenino</option>
                                </select><br>
                                                </div>
                                            </div>

                                            <div class="col-sm-6">
                                                <div class="caixa-inputs">
                                                    <div class="input_text"></div>
                                                    <label>Nº B.I</label>
                                                    <input type="text" name="numeroBI" placeholder="Inserira o seu nº do BI:" class="form-control" required>
                                                </div>
                                            </div>
                                            <div class="col-sm-4">
                                                <div class="caixa-inputs">
                                                    <div class="input_text"></div>
                                                    <label>Nº de série do colégio do seu educando</label>
                                                    <input type="text" name="id_colegio" placeholder="Insira o código do colégio na qual se encontra o seu filho:" class="form-control">
                                                </div>
                                            </div>

                                            <div class="col-sm-8">
                                                <div class="caixa-inputs">
                                                    <div class="input_text"></div>
                                                    <label>Seleciona a província em que se encontras</label>
                                                    <select name="provincia" class="form-control" required><br>
                                    <option value="Luanda">Luanda</option>
                                    <option value="Benguela">Benguela</option>
                                </select><br>
                                                </div>
                                            </div>

                                            <div class="col-sm-4">
                                                <div class="caixa-inputs">
                                                    <div class="input_text"> </div>
                                                    <input type="text" name="municipio" placeholder="Múniciopio:" class="form-control" required>
                                                </div>
                                            </div>


                                            <div class="col-sm-4">
                                                <div class="caixa-inputs">
                                                    <div class="input_text"> </div>
                                                    <input type="text" name="bairro" placeholder="Bairro:" class="form-control" required>
                                                </div>
                                            </div>

                                            <div class="col-sm-4">
                                                <div class="caixa-inputs">
                                                    <div class="input_text"> </div>
                                                    <input type="text" name="rua" placeholder="Rua:" class="form-control" required>
                                                </div>
                                            </div>

                                            <div class="col-sm-6">
                                                <div class="caixa-inputs">
                                                    <div class="input_text"> </div>
                                                    <input type="tel" name="tel_movicel" placeholder="244-992-735-537" class="form-control" required>
                                                </div>
                                            </div>


                                            <div class="col-sm-6">
                                                <div class="caixa-inputs">
                                                    <div class="input_text"> </div>
                                                    <input type="tel" name="tel_unitel" placeholder=" 244-923-735-537" class="form-control" required>
                                                </div>
                                            </div>

                                            <div class="col-sm-12">
                                                <button type="submit" class="btn btn-primary">Cadastrar</button>
                                            </div>
                                        </div>

                                    </form>
                                </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
    <% include partials/footer%>