
    <% include partials/head %>
          
    <div class="container-flue">
                <div class="row p-12">
                        <div class="col-md-12 offset-md-3">
                                <div class="card">
                                    <div class="card-body enc">
                                       <h2 class="card-title">Editar o Perfil</h2>
                                       <hr>
                                       <form action="/encarregado/addperfil" method="POST">
                                                <label>Nome completo do encarregado</label ><br>
                                                <input type="text" name="Nome_encarregado" placeholder="Insira aqui o seu nome completo:" class="form-control" >
