                                                <input type="text" name="municipio" placeholder="Múniciopio:" class="municipio" >
                                                
                                                <input type="text" name="bairro" placeholder="Bairro" class="bairro" >
                                               
                                                <input type="text" name="rua" placeholder="Rua:" class="rua">
                                              
                                                <input type="tel" name="casa" placeholder="Telefone DE casa" class="casa" >
                                               
                                                <input type="tel" name="movicel" placeholder="244-992-735-537"  class="movicel">
                                               
                                                <input type="tel" name="unitel" placeholder=" 244-923-735-537" class="unitel">
